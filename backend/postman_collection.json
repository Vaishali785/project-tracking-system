{
  "info": {
    "name": "Project Tracking API",
    "description": "Complete API collection for testing all endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Project",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Website Redesign\",\n  \"clientName\": \"Tech Corp\",\n  \"status\": \"active\",\n  \"startDate\": \"2024-01-15\",\n  \"endDate\": \"2024-03-30\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/projects",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["projects"]
        }
      }
    },
    {
      "name": "Get All Projects",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:5000/projects",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["projects"]
        }
      }
    },
    {
      "name": "Get Projects - Filter by Status",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:5000/projects?status=active",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["projects"],
          "query": [
            {
              "key": "status",
              "value": "active"
            }
          ]
        }
      }
    },
    {
      "name": "Get Projects - Search",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:5000/projects?search=website",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["projects"],
          "query": [
            {
              "key": "search",
              "value": "website"
            }
          ]
        }
      }
    },
    {
      "name": "Get Projects - Combined Filters",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:5000/projects?status=active&search=tech&sortBy=startDate",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["projects"],
          "query": [
            {
              "key": "status",
              "value": "active"
            },
            {
              "key": "search",
              "value": "tech"
            },
            {
              "key": "sortBy",
              "value": "startDate"
            }
          ]
        }
      }
    },
    {
      "name": "Get Project by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:5000/projects/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["projects", "1"]
        }
      }
    },
    {
      "name": "Update Project Status",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"completed\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/projects/1/status",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["projects", "1", "status"]
        }
      }
    },
    {
      "name": "Delete Project",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "http://localhost:5000/projects/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["projects", "1"]
        }
      }
    }
  ]
}
